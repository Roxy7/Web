{# app/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <title>{% block title %}Vinnity - Alpha 1.0{% endblock %}</title>

  {% block stylesheets %}
    {# On charge le CSS de bootstrap depuis le site directement #}
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
	{% stylesheets '../app/Resources/public/css/*' %}
   	 <link rel="stylesheet" type="text/css" charset="UTF-8" media="all" href="{{ asset_url }}"/>
  	{% endstylesheets %}
  {% endblock %}
</head>

<body>
  {# <div class="container"> #}

  {% block header %}
	{{ render(controller("Roxanne7VinnityBundle:Global:header")) }}
  {% endblock %}

  
  {% block menu %}
    <div class="row">
      <div id="menu" class="col-md-3">
        <h3>Le menu</h3>
        <ul class="nav nav-pills nav-stacked">
          <li><a href="{{ path('Roxanne7_vinnity_index') }}">Accueil</a></li>
          <li><a href="{{ path('Roxanne7_user_login') }}">Login</a></li>
          <li><a href="{{ path('Roxanne7_user_register') }}">Register</a></li>
          <li><a href="{{ path('Roxanne7_user_profile') }}">Profile</a></li>
        </ul>
      </div>
   {% endblock %}
      
      <div id="content" class="col-md-9">
        {% block body %}
        {% endblock %}
      </div>
    </div>



  {# </div> #}

    {% block footer %}
    	{{ render(controller("Roxanne7VinnityBundle:Global:footer")) }}
    {% endblock %}
  
  {% block javascripts %}
    {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalitï¿½s du bootstrap Twitter
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    #}
	{% javascripts '../app/Resources/public/js/*' %}
    	<script type="text/javascript" src="{{ asset_url }}"></script>
  	{% endjavascripts %}
    
  {% endblock %}

</body>
</html>